@{
    ViewBag.Title = "TrangChu";
    Layout = "~/Views/Shared/_LayoutPage_TrangChu.cshtml";
}
@using WebSite_QL_VeXe.Models;
@model List<ChuyenXe>


<link href="~/bootstrap/css/TimKiem_Search.css" rel="stylesheet" />
<link href="~/bootstrap/css/Style_QL.css" rel="stylesheet" />
<link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />


<title>Trang Chủ</title>
<div class="container">
    <div class="row text-center">
        <span>
            <br />
            <font face="Verdana"><h2 style="text-align:center"><b>DANH MỤC CÁC CHUYẾN XE</b></h2></font>
        </span>
    </div>
    <form class="example" action="/Home/XL_TimKiem" style="margin:auto" method="post">
        <div class="row">
            <div class="col-9">
                <input type="text" placeholder="Nhập từ khoá địa điểm" name="diadiem">
            </div>
            <div class="col-3">
                <div class="search-content-item">
                    <button type="submit">Tìm kiếm</button>
                </div>
            </div>
        </div>
    </form>
    <div class="row ">
        <div class="row product-group p-3 bg-light">
            @foreach (var s in Model)
            {
                <div class="col-4 p-3">
                    <a href="/Home/XemChiTiet/@s.MaChuyen" style="text-decoration: none;">
                        <div class="card text-center  ">
                            <div style="box-shadow:5px 5px 5px 2px #999999;">
                                <img class="hover-row card-img-top" src="~/Image/benxe.jpg" height="200" />
                                <div class="card-body">
                                    <h5 class="card-title text-center"><b>@s.TenChuyen</b></h5>
                                    <h6 class="card-subtitle mb-1 text-danger text-center"><b>Giá vé: @s.TuyenXe.GiaVe.000đ</b></h6>
                                    <div class="card-text">
                                        <a href="/Home/XemChiTiet/@s.MaChuyen" class="btn btn-danger w-100 mt-3">
                                            <img src="~/Image/details.jpg" width="30" /><b>XEM CHI TIẾT</b>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>